<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs" />
    <script type="text/brightscript" uri="UILogic/ScreenSatckLogic.brs" />

    <children>

        <Overhang
            id = "overhang"
            showOptions = "false"
            showClock = "false"
            uri = "pkg:/images/logo.png"
            translation = "[0,60]"
            visible = "false"
        />    
        <!-- LodingIndicator should be visible onlyin case of waiting for content -->
        <Label
            id = "loadingIndicator"
            text = "Loading..."
            width = "1280"
            height = "720"
            translation = "[0,0]"
            horizAlign = "center"
            vertAlign = "center"
            visible = "false"
            font = "font:MediumBoldSystemFont"
        />

    </children>
    
</component>